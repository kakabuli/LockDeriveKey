<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RevoloLock" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/c2C68FF</item>
        <item name="android:background">@drawable/shape_btn_bg</item>
        <item name="android:textSize">14pt</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="InputEditTextTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/cA5A4DA</item>
        <item name="colorControlActivated">@color/c2C68FF</item>
    </style>

    <style name="InputEditTextStyle">
        <item name="android:textColor">@color/c2C68FF</item>
        <item name="android:textColorHint">@color/cA5A4DA</item>
    </style>

</resources>