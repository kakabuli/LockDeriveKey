<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include14"
        layout="@layout/layout_title_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include14"
        app:srcCompat="@drawable/ic_home_password_add_top" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/tip_you_can_set_4_10_valid_passwords"
        android:textColor="@color/c333333"
        android:textSize="15pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <EditText
        android:id="@+id/etPwd"
        style="@style/InputEditTextStyle"
        android:layout_width="0dp"
        android:layout_height="44pt"
        android:layout_marginStart="38pt"
        android:layout_marginTop="50pt"
        android:layout_marginEnd="38pt"
        android:background="@drawable/bg_edit_under_line_selector"
        android:hint="@string/hint_please_enter_password"
        android:inputType="textPassword"
        android:maxLength="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/tvTextOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8pt"
        android:text="@string/t_can_not_contain_more_than_4_repeats_numbers"
        android:textColor="@color/c999999"
        android:textSize="12pt"
        app:layout_constraintLeft_toLeftOf="@+id/etPwd"
        app:layout_constraintRight_toRightOf="@id/etPwd"
        app:layout_constraintTop_toBottomOf="@id/etPwd" />

    <TextView
        android:id="@+id/tvTextTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8pt"
        android:text="@string/t_can_not_contain_more_than_4_sequential_numbers"
        android:textColor="@color/c999999"
        android:textSize="12pt"
        app:layout_constraintLeft_toLeftOf="@+id/etPwd"
        app:layout_constraintRight_toRightOf="@id/etPwd"
        app:layout_constraintTop_toBottomOf="@id/tvTextOne" />

    <ImageView
        android:id="@+id/ivEye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10pt"
        app:layout_constraintBottom_toBottomOf="@+id/etPwd"
        app:layout_constraintEnd_toEndOf="@+id/etPwd"
        app:layout_constraintTop_toTopOf="@+id/etPwd"
        app:srcCompat="@drawable/ic_login_icon_hide_blue" />

    <TextView
        android:id="@+id/tvTextThree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24pt"
        android:text="@string/t_how_to_use_the_password_securely"
        android:textColor="@color/cFF6A36"
        android:textSize="15pt"
        app:drawableEndCompat="@drawable/ic_icon_more_open"
        app:layout_constraintLeft_toLeftOf="@id/etPwd"
        app:layout_constraintRight_toRightOf="@id/etPwd"
        app:layout_constraintTop_toBottomOf="@id/tvTextTwo" />

    <TextView
        android:id="@+id/tvTextFour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12pt"
        android:text="@string/t_add_new_input_pin_text"
        android:textColor="@color/c999999"
        android:textSize="12pt"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@id/etPwd"
        app:layout_constraintRight_toRightOf="@id/etPwd"
        app:layout_constraintTop_toBottomOf="@id/tvTextThree" />

    <android.widget.Button
        android:id="@+id/btnNext"
        style="@style/ButtonStyle"
        android:layout_width="223pt"
        android:layout_height="44pt"
        android:layout_marginBottom="128pt"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>