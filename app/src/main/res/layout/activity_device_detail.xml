<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/include13"
        layout="@layout/layout_title_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llLowBattery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24pt"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include13">

        <ImageView
            android:id="@+id/ivBatteryState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_icon_low_battery" />

        <TextView
            android:id="@+id/tvBatteryState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4pt"
            android:text="@string/tip_low_battery"
            android:textColor="@color/c666666"
            android:textSize="10pt" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivLockState"
        android:layout_width="202pt"
        android:layout_height="202pt"
        android:layout_marginTop="75pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include13"
        tools:srcCompat="@drawable/ic_home_img_lock_close" />

    <LinearLayout
        android:layout_width="205pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="24pt"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLockState">

        <LinearLayout
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivNetState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@drawable/ic_home_icon_wifi" />

            <TextView
                android:id="@+id/tvNetState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4pt"
                android:textColor="@color/c666666"
                android:textSize="10pt"
                tools:text="@string/tip_online" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDoorState"
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivDoorState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@drawable/ic_home_icon_door_closed" />

            <TextView
                android:id="@+id/tvDoorState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4pt"
                android:textColor="@color/c666666"
                android:textSize="10pt"
                tools:text="@string/tip_closed" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="275pt"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104pt"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/llNotification"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_equipment_icon_notification" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7pt"
                android:text="@string/tip_activities"
                android:textColor="@color/c999999"
                android:textSize="11pt" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPwd"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_equipment_icon_password" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7pt"
                android:text="@string/pin_key"
                android:textColor="@color/c999999"
                android:textSize="11pt" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llUser"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_equipment_icon_user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7pt"
                android:text="@string/tip_invite"
                android:textColor="@color/c999999"
                android:textSize="11pt" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSetting"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_equipment_icon_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7pt"
                android:text="@string/tip_setting"
                android:textColor="@color/c999999"
                android:textSize="11pt" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvPrivateMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8pt"
        android:text="@string/tip_private_mode"
        android:textColor="@color/c333333"
        android:textSize="14pt"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLockState" />


</androidx.constraintlayout.widget.ConstraintLayout>