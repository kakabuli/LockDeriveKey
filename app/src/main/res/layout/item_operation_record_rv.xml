<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="67pt">

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="268pt"
        android:layout_height="0dp"
        android:layout_marginStart="16pt"
        android:textColor="@color/c333333"
        android:textSize="16pt"
        android:maxLines="2"
        android:lineSpacingMultiplier="0.7"
        android:ellipsize="end"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@+id/ivLogState"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvTime"
        tools:text="Geo-fence unlock" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16pt"
        android:textColor="@color/c999999"
        android:layout_marginBottom="10pt"
        android:textSize="14pt"
        app:layout_constraintStart_toEndOf="@+id/ivLogState"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="11:00" />

    <ImageView
        android:id="@+id/ivLogState"
        android:layout_width="34pt"
        android:layout_height="34pt"
        android:layout_marginStart="15pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_home_log_icon__alert" />

</androidx.constraintlayout.widget.ConstraintLayout>