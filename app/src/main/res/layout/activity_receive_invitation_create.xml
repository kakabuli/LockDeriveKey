<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/layout_title_bar" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45pt"
        android:text="@string/tip_receive_invitation_create"
        android:textColor="@color/c333333"
        android:textSize="17pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="300pt"
        android:layout_height="44pt"
        style="@style/InputEditTextStyle"
        android:theme="@style/InputEditTextTheme"
        android:layout_marginTop="60pt"
        android:hint="@string/email_address"
        android:textColorHint="@color/cA5A4DA"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/etPwd"
        android:layout_width="300pt"
        android:layout_height="44pt"
        style="@style/InputEditTextStyle"
        android:theme="@style/InputEditTextTheme"
        android:layout_marginTop="10pt"
        android:hint="@string/create_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />

    <android.widget.Button
        android:id="@+id/btnStartCreating"
        style="@style/ButtonStyle"
        android:layout_width="223pt"
        android:layout_height="36pt"
        android:text="@string/start_creating"
        android:layout_marginBottom="136pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>