<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/titleBar"
        layout="@layout/layout_title_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.EditText
        android:id="@+id/etFeedback"
        android:layout_width="match_parent"
        android:layout_height="213pt"
        android:layout_marginTop="7pt"
        android:layout_marginEnd="15pt"
        android:layout_marginStart="15pt"
        android:textColor="@color/c999999"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:paddingTop="8pt"
        android:paddingBottom="8pt"
        android:paddingStart="20pt"
        android:paddingEnd="20pt"
        android:textSize="16pt"
        android:background="@drawable/shape_feedback_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBar" />

    <android.widget.Button
        android:id="@+id/btnSubmit"
        style="@style/ButtonStyle"
        android:layout_width="223pt"
        android:layout_height="36pt"
        android:text="@string/submit"
        android:layout_marginBottom="136pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/titleBar"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>