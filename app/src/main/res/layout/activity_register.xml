<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/titleBar"
        layout="@layout/layout_title_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/etEmail"
        style="@style/InputEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:layout_marginStart="38pt"
        android:layout_marginTop="58pt"
        android:layout_marginEnd="38pt"
        android:drawableStart="@drawable/ic_register_icon_email_blue_false"
        android:drawablePadding="16pt"
        android:hint="@string/hint_email_address"
        android:inputType="textEmailAddress"
        android:paddingStart="15pt"
        android:paddingEnd="15pt"
        android:background="@drawable/bg_edit_under_line_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBar" />

    <EditText
        android:id="@+id/etVerification"
        style="@style/InputEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:layout_marginStart="38pt"
        android:layout_marginTop="10pt"
        android:layout_marginEnd="38pt"
        android:drawableStart="@drawable/ic_register_icon_verification_blue_false"
        android:drawablePadding="16pt"
        android:hint="@string/hint_verification_code"
        android:inputType="number"
        android:maxLength="6"
        android:paddingStart="15pt"
        android:paddingEnd="15pt"
        android:background="@drawable/bg_edit_under_line_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />

    <EditText
        android:id="@+id/etPwd"
        style="@style/InputEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:layout_marginStart="38pt"
        android:layout_marginTop="10pt"
        android:layout_marginEnd="38pt"
        android:drawableStart="@drawable/ic_register_icon_password_blue_false"
        android:drawablePadding="16pt"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:maxLength="15"
        android:paddingStart="15pt"
        android:paddingEnd="15pt"
        android:textColor="@color/c333333"
        android:background="@drawable/bg_edit_under_line_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etVerification" />

    <TextView
        android:id="@+id/tvTip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="4pt"
        android:paddingEnd="4pt"
        android:text="@string/t_tip_password_rule"
        android:textColor="@color/c999999"
        android:textSize="14pt"
        app:layout_constraintLeft_toLeftOf="@id/etPwd"
        app:layout_constraintRight_toRightOf="@id/etPwd"
        app:layout_constraintTop_toBottomOf="@id/etPwd" />

    <android.widget.Button
        android:id="@+id/btnStartCreating"
        style="@style/ButtonStyle"
        android:layout_width="223pt"
        android:layout_height="44pt"
        android:layout_marginBottom="136pt"
        android:text="@string/create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivEye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10pt"
        app:layout_constraintBottom_toBottomOf="@+id/etPwd"
        app:layout_constraintEnd_toEndOf="@+id/etPwd"
        app:layout_constraintTop_toTopOf="@+id/etPwd"
        app:srcCompat="@drawable/ic_login_icon_hide_blue" />

    <TextView
        android:id="@+id/tvGetCode"
        android:layout_width="64pt"
        android:layout_height="25pt"
        android:layout_marginBottom="10pt"
        android:background="@drawable/shape_btn_bg"
        android:gravity="center"
        android:text="@string/get_code"
        android:textColor="@color/c2C68FF"
        android:textSize="12pt"
        app:layout_constraintBottom_toBottomOf="@+id/etVerification"
        app:layout_constraintEnd_toEndOf="@+id/etVerification"
        app:layout_constraintTop_toTopOf="@+id/etVerification" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12pt"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/btnStartCreating">

        <ImageView
            android:id="@+id/ivSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_sign_in_icon_default" />

        <TextView
            android:id="@+id/tvAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7pt"
            android:textColor="@color/c333333"
            android:textSize="12pt"
            app:layout_constraintBottom_toBottomOf="@+id/ivSelect"
            app:layout_constraintStart_toEndOf="@+id/ivSelect"
            app:layout_constraintTop_toTopOf="@+id/ivSelect" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>