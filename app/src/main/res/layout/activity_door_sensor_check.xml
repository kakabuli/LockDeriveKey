<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include10"
        layout="@layout/layout_title_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22pt"
        android:gravity="center"
        android:paddingStart="33pt"
        android:paddingEnd="33pt"
        android:text="@string/close_the_door"
        android:textColor="@color/c333333"
        android:textSize="15pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include10" />

    <ImageView
        android:id="@+id/ivDoorState"
        android:layout_width="113pt"
        android:layout_height="224pt"
        android:layout_marginTop="51pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStep"
        app:srcCompat="@drawable/ic_equipment_img_magnetic_door_close" />


    <android.widget.Button
        android:id="@+id/btnNext"
        style="@style/ButtonStyle"
        android:layout_width="223pt"
        android:layout_height="44pt"
        android:text="@string/next"
        android:layout_marginBottom="76pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSkip"
        android:layout_width="223pt"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/skip"
        android:textSize="15pt"
        android:textColor="@color/c666666"
        android:layout_marginBottom="45pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvStep"
        android:layout_width="341pt"
        android:layout_height="wrap_content"
        android:textSize="15pt"
        android:textColor="@color/c666666"
        android:layout_marginStart="17pt"
        android:layout_marginTop="17pt"
        android:text="@string/open_door_step_1_3_tip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTip" />


</androidx.constraintlayout.widget.ConstraintLayout>