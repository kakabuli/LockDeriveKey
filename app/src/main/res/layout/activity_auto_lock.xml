<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/titleBar"
        layout="@layout/layout_title_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16pt"
        android:layout_marginTop="15pt"
        android:text="@string/tip_auto_lock"
        android:textColor="@color/c333333"
        android:textSize="15pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBar" />

    <ImageView
        android:id="@+id/ivAutoLockEnable"
        android:layout_width="46pt"
        android:layout_height="26pt"
        android:layout_marginTop="13pt"
        android:layout_marginEnd="15pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBar"
        app:srcCompat="@drawable/ic_icon_switch_close" />

    <TextView
        android:id="@+id/tvDetectionLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16pt"
        android:layout_marginTop="30pt"
        android:text="@string/detection_lock"
        android:textColor="@color/c333333"
        android:textSize="15pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView34" />

    <ImageView
        android:id="@+id/ivDetectionLockEnable"
        android:layout_width="46pt"
        android:layout_height="26pt"
        android:layout_marginTop="25pt"
        android:layout_marginEnd="15pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivAutoLockEnable"
        app:srcCompat="@drawable/ic_icon_switch_close" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSetLockTime"
        android:layout_width="match_parent"
        android:layout_height="0pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetectionLock">

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16pt"
            android:layout_marginTop="30pt"
            android:text="@string/set_lock_time"
            android:textColor="@color/c333333"
            android:textSize="15pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15pt"
            android:text="@string/activity_auto_lock_immediately"
            android:textColor="@color/c333333"
            android:textSize="14pt"
            app:layout_constraintBottom_toBottomOf="@+id/textView36"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView36" />

        <TextView
            android:id="@+id/tvTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15pt"
            android:layout_marginTop="40pt"
            android:text="@string/tip_the_timer_will_start_when_your_door_is_closed"
            android:textColor="@color/c666666"
            android:textSize="12pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView36" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10pt"
            android:layout_marginTop="15pt"
            android:layout_marginEnd="10pt"
            android:max="140"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView36" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvIntroduceTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24pt"
        android:paddingStart="16pt"
        android:paddingTop="6pt"
        android:paddingEnd="16pt"
        android:paddingBottom="6pt"
        android:text="@string/t_introduce_auto_lock_title"
        android:textColor="@color/c333333"
        android:textSize="15pt"
        app:drawableEndCompat="@drawable/ic_icon_more_open"
        app:layout_constraintTop_toBottomOf="@id/clSetLockTime" />

    <TextView
        android:id="@+id/tvIntroduceContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16pt"
        android:layout_marginTop="16pt"
        android:layout_marginEnd="16pt"
        android:visibility="gone"
        android:text="@string/t_introduce_auto_lock_content"
        android:textColor="@color/c666666"
        android:textSize="13pt"
        app:layout_constraintTop_toBottomOf="@id/tvIntroduceTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>