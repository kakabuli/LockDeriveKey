<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/auto_lock_load_hint_icon"
        android:layout_width="match_parent"
        android:layout_height="196pt"
        android:layout_marginTop="15pt"
        app:layout_constraintTop_toBottomOf="@+id/titleBar"
        tools:layout_editor_absoluteX="0dp" />


    <ImageView
        android:id="@+id/auto_lock_load_hint_back"
        android:layout_width="189pt"
        android:layout_height="9pt"
        android:layout_marginTop="25pt"
        android:background="@mipmap/vector_drawable_geo_loading_1_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auto_lock_load_hint_icon"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/auto_lock_load_hint_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30pt"
        android:layout_marginTop="50pt"
        android:layout_marginRight="30pt"
        android:gravity="center_horizontal"
        android:text="@string/auto_lock_load_hint_1_text"
        android:textColor="@color/c333333"
        android:textSize="14pt"
        app:layout_constraintTop_toBottomOf="@+id/auto_lock_load_hint_back" />

    <TextView
        android:id="@+id/auto_lock_load_hint_2text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30pt"
        android:layout_marginTop="30pt"
        android:layout_marginRight="30pt"
        android:gravity="center_horizontal"
        android:text="@string/auto_lock_load_hint_2_2text"
        android:textColor="@color/c999999"
        android:textSize="14pt"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/auto_lock_load_hint_text" />

    <android.widget.Button
        android:id="@+id/auto_lock_load_btnNext"
        style="@style/ButtonStyle"
        android:layout_width="223pt"
        android:layout_height="44pt"
        android:layout_marginBottom="75pt"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/tvSkip"
        android:layout_width="223pt"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45pt"
        android:gravity="center"
        android:text="@string/skip"
        android:textColor="@color/c666666"
        android:textSize="15pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>