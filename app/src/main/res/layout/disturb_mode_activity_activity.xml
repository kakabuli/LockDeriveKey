<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include17"
        layout="@layout/layout_title_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/disturb_mode_state_layout"
        android:layout_width="match_parent"
        android:layout_height="51pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include17">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16pt"
            android:text="@string/disturb_mode_activity_text"
            android:textColor="@color/c333333"
            android:textSize="15pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/disturb_mode_state_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_icon_switch_close" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/disturb_mode_what_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16pt"
        android:paddingTop="6pt"
        android:paddingEnd="16pt"
        android:paddingBottom="6pt"
        android:text="@string/disturb_mode_activity_what_text"
        android:textColor="@color/c666666"
        android:textSize="15pt"
        app:drawableEndCompat="@drawable/ic_icon_more_open"
        app:layout_constraintTop_toBottomOf="@+id/disturb_mode_state_layout"
        tools:layout_editor_absoluteY="505dp" />

    <TextView
        android:id="@+id/disturb_mode_what_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16pt"
        android:layout_marginTop="16pt"
        android:layout_marginEnd="16pt"
        android:lineSpacingExtra="5dp"
        android:text="@string/disturb_mode_activity_what_hint_text"
        android:textColor="@color/c666666"
        android:textSize="12pt"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/disturb_mode_what_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>