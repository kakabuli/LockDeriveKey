<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/include14"
        layout="@layout/layout_title_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include14"
        app:srcCompat="@drawable/ic_home_password_icon_user_edit" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15pt"
        android:textColor="@color/c333333"
        android:layout_marginTop="20pt"
        android:text="@string/title_add_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18">

        <RelativeLayout
            android:id="@+id/rlPermanent"
            android:layout_width="match_parent"
            android:layout_height="44pt"
            android:layout_marginStart="38pt"
            android:layout_marginEnd="37pt"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@color/c333333"
                android:textSize="15pt"
                android:text="@string/select_permanent"/>

            <ImageView
                android:id="@+id/ivPermanent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10pt"
                app:srcCompat="@drawable/ic_home_password_icon_selected"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlSchedule"
            android:layout_width="match_parent"
            android:layout_height="44pt"
            android:layout_marginStart="38pt"
            android:layout_marginEnd="37pt"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@color/c333333"
                android:textSize="15pt"
                android:text="@string/select_schedule"/>

            <ImageView
                android:id="@+id/ivSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10pt"
                app:srcCompat="@drawable/ic_home_password_icon_default"/>

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSchedule"
            android:layout_width="match_parent"
            android:layout_height="100pt">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/rlTemporary"
            android:layout_width="match_parent"
            android:layout_height="44pt"
            android:layout_marginStart="38pt"
            android:layout_marginEnd="37pt"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@color/c333333"
                android:textSize="15pt"
                android:text="@string/select_temporary"/>

            <ImageView
                android:id="@+id/ivTemporary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10pt"
                app:srcCompat="@drawable/ic_home_password_icon_default"/>

        </RelativeLayout>

    </LinearLayout>



    <android.widget.Button
        android:id="@+id/btnNext"
        style="@style/ButtonStyle"
        android:layout_width="223pt"
        android:layout_height="44pt"
        android:text="@string/next"
        android:layout_marginBottom="128pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>