<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/titleBar"
        layout="@layout/layout_title_bar" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45pt"
        android:text="@string/tip_login"
        android:textColor="@color/c333333"
        android:textSize="17pt"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBar" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="300pt"
        android:layout_height="44pt"
        style="@style/InputEditTextStyle"
        android:theme="@style/InputEditTextTheme"
        android:layout_marginTop="60pt"
        android:hint="@string/hint_email_address"
        android:textColorHint="@color/cA5A4DA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etPwd"
        android:layout_width="300pt"
        android:layout_height="44pt"
        style="@style/InputEditTextStyle"
        android:theme="@style/InputEditTextTheme"
        android:layout_marginTop="10pt"
        android:hint="@string/password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmail"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tvForgotPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:textColor="@color/cA5A4DA"
        android:textSize="14pt"
        android:layout_marginTop="11pt"
        app:layout_constraintEnd_toEndOf="@+id/etPwd"
        app:layout_constraintTop_toBottomOf="@+id/etPwd" />

    <android.widget.Button
        style="@style/ButtonStyle"
        android:id="@+id/btnSignIn"
        android:layout_width="223pt"
        android:layout_height="36pt"
        android:layout_marginBottom="13pt"
        android:text="@string/sign_in"
        app:layout_constraintBottom_toTopOf="@+id/ivSelect"
        app:layout_constraintEnd_toEndOf="@+id/titleBar"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivSelect"
        android:layout_width="16pt"
        android:layout_height="16pt"
        android:layout_marginBottom="107pt"
        android:layout_marginStart="109pt"
        android:src="@drawable/shape_un_select_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvIAgree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7pt"
        android:text="@string/i_agree_to"
        android:textColor="@color/c333333"
        android:textSize="12pt"
        app:layout_constraintBottom_toBottomOf="@+id/ivSelect"
        app:layout_constraintStart_toEndOf="@+id/ivSelect"
        app:layout_constraintTop_toTopOf="@+id/ivSelect" />

    <TextView
        android:id="@+id/tvTermsOfUse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms_of_use"
        android:layout_marginStart="5pt"
        android:textColor="@color/c2C68FF"
        android:textSize="12pt"
        app:layout_constraintBottom_toBottomOf="@+id/ivSelect"
        app:layout_constraintStart_toEndOf="@+id/tvIAgree"
        app:layout_constraintTop_toTopOf="@+id/ivSelect" />

</androidx.constraintlayout.widget.ConstraintLayout>