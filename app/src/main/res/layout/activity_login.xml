<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login">

    <TextView
        android:id="@+id/tv_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70pt"
        android:gravity="center"
        android:text="@string/tip_login"
        android:textColor="@color/white"
        android:textSize="28pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear_email"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:layout_marginStart="38pt"
        android:layout_marginTop="85pt"
        android:layout_marginEnd="38pt"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_login_title">

        <ImageView
            android:layout_width="18pt"
            android:layout_height="18pt"
            android:src="@drawable/ic_register_icon_email_white" />

        <View
            android:layout_width="1dp"
            android:layout_height="14pt"
            android:layout_marginStart="8pt"
            android:layout_marginEnd="8pt"
            android:background="@color/white" />

        <EditText
            android:id="@+id/etEmail"
            style="@style/LoginInputEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="@string/input_email_address"
            android:inputType="textEmailAddress"
            android:textSize="14pt" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="38pt"
        android:layout_marginEnd="38pt"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/linear_email" />

    <LinearLayout
        android:id="@+id/linear_pwd"
        android:layout_width="match_parent"
        android:layout_height="44pt"
        android:layout_marginStart="38pt"
        android:layout_marginTop="22pt"
        android:layout_marginEnd="38pt"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linear_email">

        <ImageView
            android:layout_width="18pt"
            android:layout_height="18pt"
            android:src="@drawable/ic_register_icon_password_white" />

        <View
            android:layout_width="1dp"
            android:layout_height="14pt"
            android:layout_marginStart="8pt"
            android:layout_marginEnd="8pt"
            android:background="@color/white" />

        <EditText
            android:id="@+id/etPwd"
            style="@style/LoginInputEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textSize="14pt" />

        <ImageView
            android:id="@+id/ivEye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10pt"
            app:srcCompat="@drawable/ic_login_icon_hide_white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="38pt"
        android:layout_marginEnd="38pt"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/linear_pwd" />

    <TextView
        android:id="@+id/tvForgotPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12pt"
        android:text="@string/forgot_password"
        android:textColor="@color/white"
        android:textSize="14pt"
        app:layout_constraintStart_toStartOf="@id/linear_pwd"
        app:layout_constraintTop_toBottomOf="@id/linear_pwd" />

    <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12pt"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        android:textSize="14pt"
        app:layout_constraintEnd_toEndOf="@id/linear_pwd"
        app:layout_constraintTop_toBottomOf="@id/linear_pwd" />

    <android.widget.Button
        android:id="@+id/btnSignIn"
        style="@style/LoginButtonStyle"
        android:layout_width="223pt"
        android:layout_height="44pt"
        android:layout_marginBottom="75pt"
        android:text="@string/sign_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>