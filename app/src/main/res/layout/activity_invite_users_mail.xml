<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/titleBar"
        layout="@layout/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTipName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="41pt"
        android:layout_marginTop="31pt"
        android:layout_marginEnd="36pt"
        android:text="@string/tip_invite_users"
        android:textColor="@color/c333333"
        android:textSize="15pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBar"
        app:layout_goneMarginStart="36pt" />

    <EditText
        android:id="@+id/etEmail"
        style="@style/InputEditTextStyle"
        android:layout_width="0dp"
        android:layout_height="44pt"
        android:layout_marginStart="36pt"
        android:layout_marginTop="6pt"
        android:layout_marginEnd="36pt"
        android:background="@drawable/bg_edit_under_line_selector"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:maxLength="30"
        android:textColorHint="@color/cA5A4DA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTipName" />

    <TextView
        android:id="@+id/tvFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36pt"
        android:layout_marginTop="8pt"
        android:layout_marginEnd="36pt"
        android:text="@string/hint_first_name"
        android:textColor="@color/c333333"
        android:textSize="15pt"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />

    <EditText
        android:id="@+id/etLastName"
        style="@style/InputEditTextStyle"
        android:layout_width="0dp"
        android:layout_height="44pt"
        android:layout_marginStart="36pt"
        android:layout_marginTop="6pt"
        android:layout_marginEnd="36pt"
        android:background="@drawable/bg_edit_under_line_selector"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:maxLength="30"
        android:textColorHint="@color/cA5A4DA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFirstName" />

    <TextView
        android:id="@+id/tvLastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36pt"
        android:layout_marginTop="8pt"
        android:layout_marginEnd="36pt"
        android:text="@string/hint_last_name"
        android:textColor="@color/c333333"
        android:textSize="15pt"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLastName" />

    <EditText
        android:id="@+id/etFirstName"
        style="@style/InputEditTextStyle"
        android:layout_width="0dp"
        android:layout_height="44pt"
        android:layout_marginStart="36pt"
        android:layout_marginTop="6pt"
        android:layout_marginEnd="36pt"
        android:background="@drawable/bg_edit_under_line_selector"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:maxLength="30"
        android:textColorHint="@color/cA5A4DA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLastName" />

    <android.widget.Button
        android:id="@+id/btnComplete"
        style="@style/ButtonStyle"
        android:layout_width="223pt"
        android:layout_height="44pt"
        android:layout_marginBottom="128pt"
        android:text="@string/title_add_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>