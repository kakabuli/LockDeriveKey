<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/titleBar"
        layout="@layout/layout_title_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWelcomeTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tip_receive_invitation"
        android:textColor="@color/c333333"
        android:textStyle="bold"
        android:layout_marginTop="45pt"
        android:textSize="17pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/titleBar"
        app:layout_constraintTop_toBottomOf="@+id/titleBar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90pt"
        android:gravity="center"
        android:text="@string/content_receive_invitation"
        android:textColor="@color/c2C68FF"
        android:textSize="15pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcomeTip" />

    <android.widget.Button
        style="@style/ButtonStyle"
        android:id="@+id/btnInvitation"
        android:layout_width="223pt"
        android:layout_height="36pt"
        android:layout_marginBottom="13pt"
        android:text="@string/i_accepted_an_invitation"
        app:layout_constraintBottom_toTopOf="@+id/ivSelect"
        app:layout_constraintEnd_toEndOf="@+id/titleBar"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivSelect"
        android:layout_width="16pt"
        android:layout_height="16pt"
        android:layout_marginBottom="107pt"
        android:layout_marginStart="109pt"
        android:src="@drawable/shape_un_select_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/tvIAgree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7pt"
        android:text="@string/i_agree_to"
        android:textColor="@color/c333333"
        android:textSize="12pt"
        app:layout_constraintBottom_toBottomOf="@+id/ivSelect"
        app:layout_constraintStart_toEndOf="@+id/ivSelect"
        app:layout_constraintTop_toTopOf="@+id/ivSelect" />

    <TextView
        android:id="@+id/tvTermsOfUse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms_of_use"
        android:layout_marginStart="5pt"
        android:textColor="@color/c2C68FF"
        android:textSize="12pt"
        app:layout_constraintBottom_toBottomOf="@+id/ivSelect"
        app:layout_constraintStart_toEndOf="@+id/tvIAgree"
        app:layout_constraintTop_toTopOf="@+id/ivSelect" />


</androidx.constraintlayout.widget.ConstraintLayout>