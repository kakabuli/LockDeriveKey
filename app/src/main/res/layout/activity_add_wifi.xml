<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include7"
        layout="@layout/layout_title_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45pt"
        android:textColor="@color/c333333"
        android:textSize="14pt"
        android:gravity="center"
        android:text="@string/please_choose_your_wifi_account_nand_enter_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include7" />

    <EditText
        android:id="@+id/etWifiName"
        style="@style/InputEditTextStyle"
        android:layout_width="300pt"
        android:layout_height="44pt"
        android:layout_marginTop="30pt"
        android:drawableStart="@drawable/ic_home_input_wifi"
        android:drawablePadding="41pt"
        android:inputType="text"
        android:paddingStart="15pt"
        android:paddingEnd="15pt"
        android:theme="@style/InputEditTextTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <ImageView
        android:id="@+id/ivDropdown"
        android:layout_width="36pt"
        android:layout_height="36pt"
        android:layout_marginEnd="20pt"
        android:padding="10pt"
        app:layout_constraintBottom_toBottomOf="@+id/etWifiName"
        app:layout_constraintEnd_toEndOf="@+id/etWifiName"
        app:layout_constraintTop_toTopOf="@+id/etWifiName"
        app:srcCompat="@drawable/ic_equipment_icon_dropdown" />

    <EditText
        android:id="@+id/etPwd"
        android:layout_width="300pt"
        android:layout_height="44pt"
        android:drawableStart="@drawable/ic_register_icon_password"
        android:drawablePadding="41pt"
        android:paddingStart="15pt"
        android:paddingEnd="15pt"
        style="@style/InputEditTextStyle"
        android:theme="@style/InputEditTextTheme"
        android:layout_marginTop="10pt"
        android:inputType="textPassword"
        android:hint="@string/hint_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etWifiName" />

    <ImageView
        android:id="@+id/ivEye"
        android:layout_width="36pt"
        android:layout_height="36pt"
        android:layout_marginEnd="20pt"
        android:padding="10pt"
        app:layout_constraintBottom_toBottomOf="@+id/etPwd"
        app:layout_constraintEnd_toEndOf="@+id/etPwd"
        app:layout_constraintTop_toTopOf="@+id/etPwd"
        app:srcCompat="@drawable/ic_login_icon_hide" />

    <android.widget.Button
        android:id="@+id/btnNext"
        style="@style/ButtonStyle"
        android:layout_width="223pt"
        android:layout_height="44pt"
        android:text="@string/next"
        android:layout_marginBottom="128pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSkip"
        android:layout_width="223pt"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/skip"
        android:textSize="15pt"
        android:textColor="@color/c666666"
        android:layout_marginBottom="97pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>