<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.revolo.lock">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RevoloLock">
        <activity
            android:name=".ui.sign.SignSelectActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".ui.sign.ReceiveInvitationActivity" />
        <activity android:name=".ui.sign.ReceiveInvitationCreateActivity" />
        <activity android:name=".ui.sign.InvitationInputNameActivity" />
        <activity android:name=".ui.sign.InvitationAddAvatarActivity" />
        <activity android:name=".ui.sign.RegisterActivity" />
    </application>

</manifest>